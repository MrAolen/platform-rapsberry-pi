package com.gunther.rapsberry.bluetooth.bluetooth;

import javax.bluetooth.DeviceClass;
import javax.bluetooth.DiscoveryListener;
import javax.bluetooth.RemoteDevice;
import javax.bluetooth.ServiceRecord;

public class BluetoothDeviceDiscovery implements DiscoveryListener {

	public void deviceDiscovered(RemoteDevice btDevice, DeviceClass classDevice) {
		String name;
		try {
			name = btDevice.getFriendlyName(false);
		} catch (Exception e) {
			name = btDevice.getBluetoothAddress();
		}
		App.devices.add(btDevice);
		System.out.println("device found : " + name);
	}

	public void inquiryCompleted(int arg0) {
		synchronized (App.lock) {
			App.lock.notify();
		}
	}

	public void serviceSearchCompleted(int arg0, int arg1) {

	}

	public void servicesDiscovered(int arg0, ServiceRecord[] arg1) {
	}

}
